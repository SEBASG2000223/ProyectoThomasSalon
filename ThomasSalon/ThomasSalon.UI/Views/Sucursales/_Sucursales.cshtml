@model IEnumerable<ThomasSalon.Abstracciones.Modelos.Sucursales.SucursalesDto>

<div class="container-fluid px-0 py-5 my-5">
    <div class="row mx-0 justify-content-center text-center">
        <div class="col-lg-6">
            <h6 class="d-inline-block bg-light text-primary text-uppercase py-1 px-2">Nuestras Sucursales</h6>
            <h1>Visítanos en estos lugares</h1>
        </div>
    </div>
    <div class="row">
        <div class="owl-carousel branch-carousel">
            @foreach (var item in Model)
            {
                <div class="service-item position-relative">
                    <img class="img-fluid" src="@item.LinkImagen" alt="@item.Nombre" style="width: 100%; height: 280px; object-fit: cover;">
                    <div class="service-text text-center bg-dark-overlay">
                        <h4 class="text-white font-weight-medium px-3 text-truncate" style="max-width: 100%;">
                            @item.Nombre
                        </h4>
                        <p class="text-white px-3 mb-1">
                        <p class="text-white px-3 mb-1"><a href="@item.LinkDireccion" target="_blank" class="text-white">Ver Dirección</a></p>
                        <p class="text-white px-3 mb-3">Teléfono: @item.Telefono</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

