@model IEnumerable<ThomasSalon.Abstracciones.Modelos.AsistenciaColaboradores.AsistenciaDTO>

@{
    ViewBag.Title = "Lista de Asistencias";
}

<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="admin-title">Lista de Asistencias</h2>
    </div>

    <!-- Filtro de Fecha (Calendario) -->
    <form method="get" action="@Url.Action("FiltrarAsistencias", "AsistenciaColaborador")">
        <div class="form-group row">
            <label for="fechaFiltro" class="col-md-2 col-form-label">Filtrar por Fecha:</label>
            <div class="col-md-4">
                <input type="date" id="fechaFiltro" name="fechaFiltro" class="form-control" value="@ViewBag.FechaFiltro" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-stormy">Filtrar</button>
            </div>
        </div>
    </form>

    <hr />

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-hover shadow rounded table-admin">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Colaborador</th>
                    <th>Tipo de Jornada</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var asistencia in Model)
                {
                    <tr>
                        <td>@asistencia.Fecha.ToShortDateString()</td>
                        <td>@asistencia.NombreColaborador</td>
                        <td>@asistencia.TipoJornada</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No hay asistencias registradas para esta fecha.</div>
    }
</div>
