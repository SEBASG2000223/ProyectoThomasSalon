@model IEnumerable<ThomasSalon.Abstracciones.Modelos.Servicios.ServiciosDto>


<div class="container-fluid px-0 py-5 my-5">
    <div class="row mx-0 justify-content-center text-center">
        <div class="col-lg-6">
            <h6 class="d-inline-block bg-light text-primary text-uppercase py-1 px-2">Nuestros Servicios</h6>
            <h1>Servicios de Salón de Belleza</h1>
        </div>
    </div>
    <div class="row">
        <div class="owl-carousel service-carousel">
            @foreach (var item in Model)
            {
                <div class="service-item position-relative">
                    <img class="img-fluid" src="@item.LinkImagen" alt="@item.Nombre">
                    <div class="service-text text-center">
                        <h4 class="text-white font-weight-medium px-3">@item.Nombre</h4>
                        <p class="text-white px-3 mb-3">@item.Descripcion</p>
                        <div class="w-100 bg-white text-center p-4">
                            <a class="btn btn-primary" href="@Url.Action("DetalleServicio", "Servicios", new { id = item.IdServicio })">Reservar</a>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>