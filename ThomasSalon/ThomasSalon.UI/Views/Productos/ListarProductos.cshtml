@model IEnumerable<ThomasSalon.Abstracciones.Modelos.Productos.ProductosDto>

@{
    ViewBag.Title = "ListarProductos";
}

<h2>ListarProductos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
    <table id="myTable" class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdProducto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdProveedor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnidadMedida)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdEstado)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdProducto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreProveedor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnidadMedida)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreEstado)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdProducto }) |
                  
                        @if (item.IdEstado == 1)
                        {
                            <a href="@Url.Action("Inactivar", "Productos", new { id = item.IdProducto })" class="btn btn-danger btn-sm">
                                Inactivar
                            </a>
                        }
                        @if (item.IdEstado == 2)
                        {
                            <a href="@Url.Action("Activar", "Productos", new { id = item.IdProducto })" class="btn btn-success btn-sm">
                                Activar
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@functions{
    public string SaberEstado(int estado)
    {
        if (estado == 2) return "Inactivo";
        if (estado == 1) return "Activo";
        return "Estado invalido";
    }
}
@section scripts
    {
    <script src="~/Scripts/ScriptsFront/Productos/ListaDataTableProductos.js"></script>
}