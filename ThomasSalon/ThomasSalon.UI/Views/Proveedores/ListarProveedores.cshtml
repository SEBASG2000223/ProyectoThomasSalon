@model IEnumerable<ThomasSalon.Abstracciones.Modelos.Proveedores.ProveedoresDto>

@{
    ViewBag.Title = "ListarProveedores";
}
<div class="container pt-5">
    <h2 class="admin-title">Listado de Proveedores</h2>

    <div class="mb-3 text-start">
        <a href="@Url.Action("Create", "Proveedores")" class="btn btn-admin">Registrar proveedor</a>
    </div>

    <div class="table-responsive">
        <table id="myTable" class="table table-bordered table-hover shadow rounded table-admin">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IdProveedor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefono)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Direccion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdEstado)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdProveedor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreEstado)
                        </td>
                        <td>

                            <a href="@Url.Action("Edit", "Proveedores", new { id = item.IdProveedor })" class="btn btn-stormy">
                                Editar
                            </a>
                            @if (item.IdEstado == 1)
                            {
                                <a href="@Url.Action("Inactivar", "Proveedores", new { id = item.IdProveedor })" class="btn btn-sunset">
                                    Inactivar
                                </a>
                            }
                            @if (item.IdEstado == 2)
                            {
                                <a href="@Url.Action("Activar", "Proveedores", new { id = item.IdProveedor })" class="btn btn-highlight">
                                    Activar
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
    @functions{
        public string SaberEstado(int estado)
        {
            if (estado == 2) return "Inactivo";
            if (estado == 1) return "Activo";
            return "Estado invalido";
        }
    }
    @section scripts
    {
        <script src="~/Scripts/ScriptsFront/Proveedores/ListaDataTableProveedores.js"></script>
    }
