@model ThomasSalon.Abstracciones.Modelos.InventarioSucursal.InventarioSucursalDto

@{
    ViewBag.Title = "Actualizar Inventario";
}

<h2>Actualizar el Inventario</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <!-- Campo oculto para IdSucursal -->
    @Html.HiddenFor(model => model.IdSucursal)

    <!-- Campo oculto para IdProducto -->
    @Html.HiddenFor(model => model.IdProducto)

    <div class="form-group">
        @Html.LabelFor(model => model.Cantidad, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-dark btn-md" />
        </div>
    </div>
</div>
}

<a href="@Url.Action("ListarInventarioSucursal", "InventarioSucursal", new { idSucursal = TempData["IdSucursalSeleccionada"] })" class="btn btn-primary btn-sm" ">
    Volver al inventario de la sucursal
</a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
