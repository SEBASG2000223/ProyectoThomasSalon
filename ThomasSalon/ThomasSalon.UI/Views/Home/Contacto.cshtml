@{
    ViewData["Title"] = "Contacto";
}

<div class="container text-center mt-4">
    <h1 class="mb-3">Contacto</h1>

    <p class="mb-3">
        Puedes comunicarte con nosotros a través de los siguientes medios:
    </p>

    <ul class="list-group d-inline-block text-start mb-4">
        <li class="list-group-item">📍 Dirección: San Antonio, Desamparados.</li>
        <li class="list-group-item">📞 Teléfono: +506 70129621</li>
        <li class="list-group-item">📧 Email: infothomassalon@gmail.com</li>
        <li class="list-group-item">📲 WhatsApp: +506 70129621</li>
    </ul>

    <h3 class="mt-4">Envíanos un Mensaje</h3>

    <div class="d-flex justify-content-center">
        <form id="contactoForm" class="contact-form">
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre:</label>
                <input type="text" id="nombre" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Correo Electrónico:</label>
                <input type="email" id="email" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="mensaje" class="form-label">Mensaje:</label>
                <textarea id="mensaje" class="form-control" rows="4" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Enviar</button>
        </form>
    </div>

    <div id="mensajeEnviado" class="mt-3"></div>
</div>

<script>
    document.getElementById("contactoForm").addEventListener("submit", function (event) {
        event.preventDefault();

        let nombre = document.getElementById("nombre").value;
        let email = document.getElementById("email").value;
        let mensaje = document.getElementById("mensaje").value;

        fetch("/Home/EnviarMensaje", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ nombre, email, mensaje })
        })
            .then(response => response.text())
            .then(data => document.getElementById("mensajeEnviado").innerText = data);
    });
</script>
